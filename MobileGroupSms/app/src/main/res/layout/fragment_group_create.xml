<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.groupcreate.GroupCreateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top|left"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grup Adı"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/groupcreate_groupNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="12dp"
                android:layout_weight="0"
                android:background="@drawable/input"
                android:ems="10"
                android:gravity="center|center_horizontal|center_vertical"
                android:inputType="text"
                android:padding="8dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Grup Simgesi"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/groupcreate_groupImageImageView"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/group" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Açıklama"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/groupcreate_groupDescriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_margin="4dp"
                android:layout_marginTop="12dp"
                android:layout_weight="0"
                android:background="@drawable/input"
                android:ems="10"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:padding="8dp" />

            <Button
                android:id="@+id/groupcreate_groupCreateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="8dp"
                android:text="Grup Oluştur" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gruplar"
                android:textColor="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:id="@+id/groupcreate_groupRecyclerView" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="201913709010 - Furkan GÜNEŞ"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>
</FrameLayout>